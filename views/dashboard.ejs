<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Boxicons -->
    <link
      href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- My CSS -->
    <link rel="stylesheet" href="/stylesheets/dashboard.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />

    <title>CryptDrive</title>
  </head>
  <body>
    <!-- SIDEBAR -->
    <section id="sidebar">
      <a href="#" class="brand">
        <i class="bx bx-cloud-lightning"></i>
        <span class="text">CryptDrive</span>
      </a>
      <ul class="side-menu top">
        <li class="active">
          <a href="#">
            <i class="bx bxs-dashboard"></i>
            <span class="text">Dashboard</span>
          </a>
        </li>
        <li>
          <a href="#">
            <i class="bx bx-share-alt"></i>
            <span class="text">Shared files</span>
          </a>
        </li>
        <li>
          <a href="#">
            <i class="bx bxs-file"></i>
            <span class="text">Recent files</span>
          </a>
        </li>
        <li>
          <a href="#">
            <i class="bx bxs-trash"></i>
            <span class="text">Trash files</span>
          </a>
        </li>
        <li>
          <a href="#">
            <i class="bx bxs-lock-alt"></i>
            <span class="text">Locked</span>
          </a>
        </li>
      </ul>
      <ul class="side-menu">
        <li>
          <a href="#">
            <i class="bx bxs-cog"></i>
            <span class="text">Settings</span>
          </a>
        </li>
        <li>
          <a href="/user/logout" class="logout">
            <i class="bx bxs-log-out-circle"></i>
            <span class="text">Logout</span>
          </a>
        </li>
      </ul>
    </section>
    <!-- SIDEBAR -->

    <!-- CONTENT -->
    <section id="content">
      <!-- NAVBAR -->
      <nav>
        <i class="bx bx-menu"></i>
        <!-- <a href="#" class="nav-link">Categories</a> -->
        <form action="#">
          <div class="form-input">
            <input type="search" placeholder="Search..." />
            <button type="submit" class="search-btn">
              <i class="bx bx-search"></i>
            </button>
          </div>
        </form>
        <input type="checkbox" id="switch-mode" hidden />
        <label for="switch-mode" class="switch-mode"></label>

        <a href="#" class="profile">
          <% if(!user.displayName) { %> <%= user.fullname.firstname %> <%=
          user.fullname.lastname %> <% } else { %> <%= user.displayName %> <%
          }%>
        </a>
      </nav>
      <!-- NAVBAR -->

      <!-- MAIN -->
      <main>
        <div class="head-title">
          <div class="left">
            <h1>Dashboard</h1>
            <ul class="breadcrumb">
              <li>
                <a href="#">Dashboard</a>
              </li>
              <li><i class="bx bx-chevron-right"></i></li>
              <li>
                <a class="active" href="#">Home</a>
              </li>
            </ul>
          </div>
          <button class="btn-download" onclick="showPopUp()">
            <i class="bx bx-upload"></i>
          </button>
        </div>

        <ul class="box-info">
          <li>
            <i class="bx bx-images"></i>
            <span class="text">
              <h3>.34GB</h3>
              <p>Images</p>
            </span>
          </li>
          <li>
            <i class="bx bxs-videos"></i>
            <span class="text">
              <h3>2.5GB</h3>
              <p>Videos</p>
            </span>
          </li>
          <li>
            <i class="bx bxs-file-doc"></i>
            <span class="text">
              <h3>.60GB</h3>
              <p>Documents</p>
            </span>
          </li>
        </ul>

        <div class="table-data">
          <div class="order">
            <div class="head">
              <h3>Recent Files</h3>
              <i class="bx bx-search"></i>
              <i class="bx bx-filter"></i>
            </div>
            <table>
              <thead>
                <tr>
                  <th class="firstboi">File Name</th>
                  <th>Size</th>
                  <th>File Type</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tbody>
                <% files.forEach(file => { %>
                  <tr>
                    <td>
                      <a href="<%= file.path %>">
                        <p><%= file.originalName %></p>
                      </a>
                    </td>
                    <td class="dateboi">1 MB</td>
                    <td class="dateboi">Img</td>
                    <td class="dateboi">
                      <%= file.createdAt.toDateString() %>
                    </td>
                    <td class="lastboi">
                      <a
                        href="/drive/download/<%= encodeURIComponent(file.path) %>"
                        download="<%= file.originalName%>"
                      >
                        <i class="ri-download-line"></i>
                      </a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
        <div
          class="pop hidden fixed top-0 left-0 h-screen w-screen flex items-center justify-center backdrop-blur"
        >
          <form
            action="/drive/upload"
            method="post"
            enctype="multipart/form-data"
            class="w-2/6"
          >
            <div class="flex items-center justify-center">
              <label
                for="dropzone-file"
                class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:hover:bg-gray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600"
              >
                <div
                  class="flex flex-col items-center justify-center pt-5 pb-6"
                >
                  <svg
                    class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 20 16"
                  >
                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"
                    />
                  </svg>
                  <p class="mb-2 text-sm text-gray-500 dark:text-gray-400">
                    <span class="font-semibold">Click to upload</span> or drag
                    and drop
                  </p>
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    SVG, PNG, JPG or GIF (MAX. 800x400px)
                  </p>
                </div>
                <input
                  id="dropzone-file"
                  type="file"
                  class="hidden"
                  name="file"
                />
              </label>
            </div>
            <button
              class="bg-blue-400 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded mt-4 mx-48"
            >
              Upload file
            </button>
          </form>
          <button
            onclick="closePopUp()"
            class="absolute right-4 top-0.5 text-xl cancel-button text-gray-500"
          >
            <i class="ri-close-line"></i>
          </button>
        </div>
      </main>
      <!-- MAIN -->
    </section>
    <!-- CONTENT -->
    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
    <script src="/scripts/dashboard.js"></script>
    <script>
      function showPopUp() {
        document.querySelector(".pop").style.display = "flex";
      }

      function closePopUp() {
        document.querySelector(".pop").style.display = "none";
      }
    </script>
  </body>
</html>
